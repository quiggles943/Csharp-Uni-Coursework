<Window x:Class="Menu_Program.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password" Height="173" Width="300">
    <Grid>
        <Label Content="Please enter password to continue" HorizontalAlignment="Left" Margin="32,10,0,0" VerticalAlignment="Top" FontSize="13"/>
        <PasswordBox x:Name="passwordbox" HorizontalAlignment="Left" Margin="32,42,0,0" VerticalAlignment="Top" Width="207" KeyDown="keypress"/>
        <Button x:Name="enterbtn" Content="Enter" HorizontalAlignment="Left" Margin="102,66,0,0" VerticalAlignment="Top" Width="75" Click="enterbtn_Click"/>
        <Button Content="close" HorizontalAlignment="Left" Margin="194,99,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click"/>

    </Grid>
</Window>
