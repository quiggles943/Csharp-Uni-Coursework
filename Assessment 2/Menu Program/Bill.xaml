<Window x:Class="Menu_Program.Bill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bill" Height="263.333" Width="160">
    <Grid>
        <Button x:Name="closebtn" Content="Close" HorizontalAlignment="Left" Margin="30,192,0,0" VerticalAlignment="Top" Width="75" Click="closebtn_Click" ToolTip="Closes bill window"/>
        <ListBox x:Name="billlist" HorizontalAlignment="Left" Height="100" Margin="10,5,0,0" VerticalAlignment="Top" Width="121" SelectionChanged="billlist_SelectionChanged"/>
        <Label Content="Sub Total: £" HorizontalAlignment="Left" Margin="37,110,0,0" VerticalAlignment="Top"/>
        <Label x:Name="subtotallabel" Content="00.00" HorizontalAlignment="Left" Margin="100,110,0,0" VerticalAlignment="Top" Width="58"/>
        <Label x:Name="deliverychargelabel" Content="Delivery Charge: £" HorizontalAlignment="Left" Margin="3,132,0,0" VerticalAlignment="Top"/>
        <Label x:Name="deliv_chargelabel" Content="00.00" HorizontalAlignment="Left" Margin="100,132,0,0" VerticalAlignment="Top" Width="58"/>
        <Label Content="Total: £" HorizontalAlignment="Left" Margin="60,153,0,0" VerticalAlignment="Top"/>
        <Label x:Name="totallabel" Content="00.00" HorizontalAlignment="Left" Margin="100,153,0,0" VerticalAlignment="Top" Width="58"/>

    </Grid>
</Window>
