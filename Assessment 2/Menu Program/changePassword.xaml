<Window x:Class="Menu_Program.changePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="changePassword" Height="206" Width="300">
    <Grid>
        <PasswordBox x:Name="old1" HorizontalAlignment="Left" Margin="147,27,0,0" VerticalAlignment="Top" Width="124"/>
        <PasswordBox x:Name="old2" HorizontalAlignment="Left" Margin="147,52,0,0" VerticalAlignment="Top" Width="124"/>
        <PasswordBox x:Name="newPassword" HorizontalAlignment="Left" Margin="147,100,0,0" VerticalAlignment="Top" Width="124"/>
        <Label Content="Old password:" HorizontalAlignment="Left" Margin="57,22,0,0" VerticalAlignment="Top" Height="25"/>
        <Label Content="Reenter old password:" HorizontalAlignment="Left" Margin="14,47,0,0" VerticalAlignment="Top" Height="25"/>
        <Label Content="New password:" HorizontalAlignment="Left" Margin="57,95,0,0" VerticalAlignment="Top" Height="25"/>
        <Label x:Name="passwordmatch" Content="Label" HorizontalAlignment="Left" Margin="147,72,0,0" VerticalAlignment="Top" Width="124" FontSize="10"/>
        <Button x:Name="change1" Content="Change" HorizontalAlignment="Left" Margin="170,125,0,0" VerticalAlignment="Top" Width="76" Click="Button_Click"/>

    </Grid>
</Window>
