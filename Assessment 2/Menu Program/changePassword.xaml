<Window x:Class="Menu_Program.changePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="changePassword" Height="227" Width="328">
    <Grid>
        <PasswordBox x:Name="old1" HorizontalAlignment="Left" Margin="186,25,0,0" VerticalAlignment="Top" Width="113" KeyDown="oldkeypress"/>
        <PasswordBox x:Name="newPassword" HorizontalAlignment="Left" Margin="186,64,0,0" VerticalAlignment="Top" Width="113" KeyDown="new1keypress"/>
        <PasswordBox x:Name="new2" HorizontalAlignment="Left" Margin="186,94,0,0" VerticalAlignment="Top" Width="113" TextInput="textchanged" PasswordChanged="textchanged" KeyDown="newPasswordKeyPress"/>
        <Label Content="Old password:" HorizontalAlignment="Left" Margin="72,20,0,0" VerticalAlignment="Top" Height="34"/>
        <Label Content="Reenter new password:" HorizontalAlignment="Left" Margin="26,88,0,0" VerticalAlignment="Top" Height="32"/>
        <Label Content="New password:" HorizontalAlignment="Left" Margin="68,59,0,0" VerticalAlignment="Top" Height="29"/>
        <Label x:Name="passwordmatch" Content="Label" HorizontalAlignment="Left" Margin="116,120,0,0" VerticalAlignment="Top" Width="183" Height="28"/>
        <Button x:Name="change1" Content="Change" HorizontalAlignment="Left" Margin="170,165,0,0" VerticalAlignment="Top" Width="76" Click="Button_Click"/>

    </Grid>
</Window>
